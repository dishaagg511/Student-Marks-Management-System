@model WebApplication8.Models.mark

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Marks</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SubjectId)
    @Html.HiddenFor(model => model.StudentId)

    <div class="form-group">
        <label for="Marks" class="control-label col-md-2" style="font-weight: bold;">Marks :</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Marks, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>


    <dl class="dl-horizontal">
        <dt style="font-weight: bold;">Subject Name :</dt>

        <dd>
            @Html.DisplayFor(model => model.Subject_Name)
        </dd>
    </dl>

    <div class="form-group">
        <button type="submit">Save</button>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
